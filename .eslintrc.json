{
  "rules": {
    "no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 8,
        "prettier/prettier": "error",
        "no-undef": "error"
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
     "sourceType": "module",
    "ecmaVersion": 2020,
    // Can I remove these now?
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    }
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "html"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "jsx-a11y/href-no-hash": "off",
  "jsx-a11y/anchor-is-valid": [
    "warn",
    {
      "aspects": [
        "invalidHref"
      ]
    }
  ],
}
